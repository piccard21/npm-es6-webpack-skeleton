{
  "name": "npm-es6-webpack-skeleton",
  "version": "0.0.4",
  "description": "A simple skeleton for npm-module-development with ES6, based on webpack.",
  "main": "dist/app.js",
  "scripts": {
    "test": "mocha --reporter spec",
    "prod": "npm run production",
    "production": "npm run development & cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config  webpack.prod.js", 
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config webpack.dev.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config webpack.dev.js",
    "start": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --open --config webpack.devserver.js"
  },
  "keywords": [
    "npm",
    "node",
    "webpack",
    "es6",
    "webpack",
    "skeleton"
  ],
  "author": "Andreas Stephan <info@cafe-serendipity.com> (cafe-serendipity.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
